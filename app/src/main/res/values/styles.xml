<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activities theme -->
    <style name="ActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Preference Activity theme -->
    <style name="PrefsTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/prefs_background</item>
        <item name="colorAccent">@color/mBlack</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:background">@color/mBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/mBlack</item>
        <item name="android:background">?drawerColor</item>
        <item name="android:textColorPrimary">?textColor</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textCursorDrawable">?textColor</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">?textColor</item>
        <item name="colorControlActivated">?textColor</item>
        <item name="colorControlHighlight">?textColor</item>
    </style>
</resources>
